@page
@model ejercicios_razor_pages.Pages.programa2Model
<!DOCTYPE html>
<html>
<head>
    <title>Programa 2 - Cifrado César</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Cifrado César</h2>

        <form method="post">
            <div class="form-group">
                <label for="message">Mensaje:</label>
                <input type="text" class="form-control" id="message" asp-for="message" name="message" />
            </div>
            <div class="form-group">
                <label for="shift">Desplazamiento (n):</label>
                <input type="number" class="form-control" id="shift" asp-for="shift" name="shift" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" name="action" value="encode">Codificar</button>
                <button type="submit" class="btn btn-primary" name="action" value="decode">Decodificar</button>
            </div>
        </form>

        @if (Model.result != null)
        {
            <h3>Resultado:</h3>
            <p>@Model.result</p>
        }
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
